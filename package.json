{
    "name": "awslex",
    "label": "AWS Lex Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.3.7",
            "instanceId": "shared"
        }
    ],
    "configuration": [
        {
            "name": "accessKey",
            "label": "AWS Access Key",
            "type": "text",
            "required": true
        },
        {
            "name": "secretAccessKey",
            "label": "AWS Secret Access Key",
            "type": "password",
            "required": true
        },
        {
            "name": "region",
            "label": "AWS Region",
            "type": "text",
            "required": true
        },
        {
            "name": "AWS_LEX_API_BASE_URL",
            "label": "AWS Lex Api Url",
            "type": "label",
            "value": "https://models.lex.'+@region+'.amazonaws.com"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from PandaDoc."
        },
        {
            "label": "Callback",
            "name": "callback",
            "description": "Happens when a async process is finished"
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "listener",
            "namespace": "webhook",
            "path": "/listeners/webhook.js"
        },
        {
            "type": "flowStep",
            "namespace": "apiCallAwsLex",
            "path": "/flowSteps/apiCallAwsLex"
        }
    ]
}